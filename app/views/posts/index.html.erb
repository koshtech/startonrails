<h1><%= t :listing_posts %></h1>

<table>
  <tr>
    <th><%= t :title %></th>
    <th><%= t :description %></th>
    <th><%= t :published  %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.description %></td>
    <td><%= post.published %></td>
    <td><%= link_to t(:show), post %></td>
    <td><%= link_to t(:edit), edit_post_path(post) %></td>
    <td><%= link_to t(:destroy), post, confirm: t(:are_you_sure), method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

